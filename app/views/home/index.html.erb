<div class="container text-center">
<% name = current_user.present? ? current_user.email : "Stanger" %>
  <h1>Home <%= name%></h1>
  <p>Welcome to this twitter clone</p>
  <% if current_user.present? %>
    <%=link_to "followers #{current_user.followers.count}", followers_path(current_user) %>
    <%=link_to "followees #{current_user.followees.count}", followees_path(current_user) %> <br>
    <%= link_to "Tweet", new_tweet_path, class: "btn btn-info" %>
  <% else %>
    <p>Please for start login or Sign up</p>

    <%= link_to "login", new_user_session_path , class:"btn btn-info" %>

<%= link_to "Sign Up", new_user_registration_path, class:"btn btn-info" %>
  <% end %>
</div>
